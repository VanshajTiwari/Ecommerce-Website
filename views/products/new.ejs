<!-- boilerplate ko index page ke andar include krenge(but - nhi likhte) -->
<% layout('layouts/boilerplate')  %>
<%- include('../partials/navbar') %>

<div class="row">
    <div class="col-6 mx-auto">
        <form action="/products" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name: </label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Name of Product">
                <!-- name attribute m vahi likhte hai jo humne schema m likha hai -->
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Url: </label>
                <input type="text" class="form-control" name="img" id="imge" placeholder="Image URL of Product">
            </div>
            <div class="mb-3">
                <label for="paisa" class="form-label">Price: </label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Rs. </span>
                    <input class="form-control" type="number" name="price" id="paisa" step="any" placeholder="Price of Product">
                </div>
            </div>
            <div class="mb-3">
                <label for="des" class="form-label">Description: </label>
                <textarea class="form-control"  name="desc" id="des" rows="5" placeholder="Description of Product"></textarea>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Add Product</button>
            <!-- add product button pr click krte hi post request jayegi /products pr jo humne form define kiya hai in action attribute-->
        </form>
    </div>
</div>


